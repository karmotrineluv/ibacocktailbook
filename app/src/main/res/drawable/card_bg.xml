<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Черный фон -->
    <solid android:color="#0A0A0A" />

    <!-- Белая рамка -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <!-- Без скругления углов -->
    <corners android:radius="0dp" />

    <!-- Паддинг (отступы) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
