<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.ibacocktailbook.ui.auth.LoginFragment"
        android:label="Login">

        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.ibacocktailbook.ui.home.HomeFragment"
        android:label="Home" />

    <action
        android:id="@+id/action_homeFragment_to_cocktailDetailFragment"
        app:destination="@id/cocktailDetailFragment" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.ibacocktailbook.ui.auth.RegisterFragment"
        android:label="Регистрация">

        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_registerFragment_to_emailVerificationFragment"
            app:destination="@id/emailVerificationFragment" />

    </fragment>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.ibacocktailbook.ui.auth.ResetPasswordFragment"
        android:label="Сброс пароля">

        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/emailVerificationFragment"
        android:name="com.example.ibacocktailbook.ui.auth.VerifyEmailFragment"
        android:label="Подтверждение почты">

        <action
            android:id="@+id/action_emailVerificationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <action
            android:id="@+id/action_emailVerificationFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/cocktailDetailFragment"
        android:name="com.example.ibacocktailbook.ui.home.CocktailDetailFragment"
        android:label="Cocktail Detail">
        <argument
            android:name="cocktailId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.ibacocktailbook.ui.favorites.FavoritesFragment"
        android:label="Saved"
        tools:layout="@layout/fragment_favorites" />

    <action
        android:id="@+id/action_favoritesFragment_to_cocktailDetailFragment"
        app:destination="@id/cocktailDetailFragment" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.ibacocktailbook.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <action
        android:id="@+id/action_profileFragment_to_loginFragment"
        app:destination="@id/loginFragment" />


</navigation>
